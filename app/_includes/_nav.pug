mixin nav(page, lang)
    if !lang
        if page=='index'
            section.nav
                a(href='#')
                    svg.nav__brand
                        use(xlink:href='#magellan-brand')
                nav.nav__navigation
                    a.nav__navigation__item.btn.btn--glass(href='#kompetenzen') Kompetenzen
                    a.nav__navigation__item.btn.btn--glass(href='#impressionen') Impressionen
                    a.nav__navigation__item.btn.btn--glass(href='#team') Über mich
                    a.nav__navigation__item.btn.btn--glass(href='#kontakt') Kontakt
                    a.nav__navigation__item.btn.btn--glass(href='#blog') Blog
                    a.nav__navigation__item.nav__navigation__item--cta.btn.plo-button(href='https://plasso.com/s/i1OZ86GPN8/product/hire1hour') Beauftragen.
                    a.nav__navigation__item.lang(href='index.en.html' title='Switch to English') EN
        else
            section.nav
                a(href='/')
                    img.nav__brand(src='/assets/images/vector/magellan-brand.svg')
